        <main class="mdl-layout__content">
            <div class="mdl-grid portfolio-max-width">
            {{#each recipe}}
                <div class="mdl-cell mdl-card mdl-shadow--4dp portfolio-card" data-link={{this.href}} id="recipe{{@index}}">
                    <div class="mdl-card__media">
                        <img class="article-image" src={{this.thumbnail}} border="0" alt="">
                    </div>
                    <div class="mdl-card__title">
                        <h2 class="mdl-card__title-text">{{this.title}}</h2>
                    </div>
                    <div class="mdl-card__supporting-text">
                        Enim labore aliqua consequat ut quis ad occaecat aliquip incididunt. 
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent recipe-modal" data-link={{this.href}} data-img={{this.thumbnail}} data-title="{{this.title}}" data-ingredients="{{this.ingredients}}">Read more</a>
                    </div>
                </div>
            {{/each}} 
            </div>

        </main>
